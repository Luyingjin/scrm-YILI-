        var url = "http://yiliscrm3.mgcc.com.cn/TestApi/Index3?1=1";

        share_url = window.location.href.split('#')[0];

        wx.config({
            debug: false,
            appId: '@ViewBag.appId',
            timestamp: '@ViewBag.timestamp',
            nonceStr: '@ViewBag.nonceStr',
