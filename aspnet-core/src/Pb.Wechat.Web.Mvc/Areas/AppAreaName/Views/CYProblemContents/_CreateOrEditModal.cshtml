@using Pb.Wechat
@using Pb.Wechat.CYProblemContents.Dto
@using Pb.Wechat.Web.Areas.AppAreaName.Models.Common.Modals
@using Pb.Wechat.Web.Areas.AppAreaName.Models.CYProblemContents
@model CreateOrEditCYProblemContentViewModel

@Html.Partial("~/Areas/AppAreaName/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? (L("Edit") + ": " + Model.Text) : L("Create")))

<div class="modal-body">
    <form name="DataForm" role="form" novalidate class="form-validation">
        @if (Model.IsEditMode)
        {
            <input type="hidden" name="Id" value="@Model.Id" />
        }
		<div class="form-group form-md-line-input form-md-floating-label">
            <label for="Id">Id</label>
            <input class="form-control edited" type="text" name="Id" value="@Model.Id" required>
        </div>
<div class="form-group form-md-line-input form-md-floating-label">
            <label for="Age">Age</label>
            <input class="form-control edited" type="text" name="Age" value="@Model.Age" required>
        </div>
<div class="form-group form-md-line-input form-md-floating-label">
            <label for="CreationTime">CreationTime</label>
            <input class="form-control edited" type="text" name="CreationTime" value="@Model.CreationTime" required>
        </div>
<div class="form-group form-md-line-input form-md-floating-label">
            <label for="DoctorId">DoctorId</label>
            <input class="form-control edited" type="text" name="DoctorId" value="@Model.DoctorId" required>
        </div>
<div class="form-group form-md-line-input form-md-floating-label">
            <label for="File">File</label>
            <input class="form-control edited" type="text" name="File" value="@Model.File" required>
        </div>
<div class="form-group form-md-line-input form-md-floating-label">
            <label for="ProblemId">ProblemId</label>
            <input class="form-control edited" type="text" name="ProblemId" value="@Model.ProblemId" required>
        </div>
<div class="form-group form-md-line-input form-md-floating-label">
            <label for="SendUser">SendUser</label>
            <input class="form-control edited" type="text" name="SendUser" value="@Model.SendUser" required>
        </div>
<div class="form-group form-md-line-input form-md-floating-label">
            <label for="Sex">Sex</label>
            <input class="form-control edited" type="text" name="Sex" value="@Model.Sex" required>
        </div>
<div class="form-group form-md-line-input form-md-floating-label">
            <label for="Text">Text</label>
            <input class="form-control edited" type="text" name="Text" value="@Model.Text" required>
        </div>
<div class="form-group form-md-line-input form-md-floating-label">
            <label for="Type">Type</label>
            <input class="form-control edited" type="text" name="Type" value="@Model.Type" required>
        </div>
    </form>
</div>
@Html.Partial("~/Areas/AppAreaName/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")