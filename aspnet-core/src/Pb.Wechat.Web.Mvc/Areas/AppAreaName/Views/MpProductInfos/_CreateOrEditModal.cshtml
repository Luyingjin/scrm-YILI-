@using Pb.Wechat
@using Pb.Wechat.Web.Areas.AppAreaName.Models.Common.Modals
@using Pb.Wechat.Web.Areas.AppAreaName.Models.MpProductInfos
@model CreateOrEditMpProductInfoViewModel


@Html.Partial("~/Areas/AppAreaName/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? (L("Edit") + ": " + Model.Title) : L("Create")))

<div class="modal-body">
    <div class="row ">

        <div class="col-xs-12">
            <form id="UploadPicModalForm" method="POST" action="@(AppConsts.MvcAppPath +"AppAreaName/MpProductInfos/SaveAndUpdate")">
                @if (Model.IsEditMode)
                {
                    <input type="hidden" id="Id" name="Id" value="@Model.Id" />
                }

                <input type="hidden" id="FilePathOrUrl" name="FilePathOrUrl" value="@Model.FilePathOrUrl" />
                <input type="hidden" id="TypeId" name="TypeId" value="@Model.TypeId" />
                <input type="hidden" id="TypeTitle" name="TypeTitle" value="@Model.TypeTitle" />

                <div class="col-xs-8">
                    <div class="form-group form-row-seperated form-md-floating-label">
                        <label class="control-label">分类：</label>
                        <select class="form-control" id="sel_TypeDescription" class="form-control"></select>
                    </div>
                    <div class="form-group form-row-seperated form-md-floating-label">
                        <label for="Title">标题</label>
                        <input class="form-control edited" type="text" id="Title" name="Title" value="@Model.Title" required maxlength="50">
                    </div>

                    <div class="form-group form-row-seperated form-md-floating-label">
                        <label for="SubTitle">副标题</label>
                        <input class="form-control edited " type="text" id="SubTitle" name="SubTitle" value="@Model.SubTitle" maxlength="500">
                    </div>

                    <div class="form-group form-row-seperated form-md-floating-label">
                        <label for="ProductIntroduce">产品介绍</label>
                        <textarea class="form-control edited" id="ProductIntroduce" name="ProductIntroduce" rows="4">@Model.ProductIntroduce</textarea>
                    </div>
                    <div class="form-group form-row-seperated form-md-floating-label">
                        <label for="ProductFormulations">功能及配方</label>
                        <textarea class="form-control edited" id="ProductFormulations" name="ProductFormulations" rows="6">@Model.ProductFormulations</textarea>
                    </div>
                    <div class="form-group form-row-seperated form-md-floating-label">
                        <label for="SortIndex">排序</label>
                        <input class="form-control edited " type="number" id="SortIndex" name="SortIndex" value="@Model.SortIndex">
                    </div>
                </div>

                <div class="col-xs-4">
                    <img id="UploadPicResize" src="@Model.FilePathOrUrl" style="width:250px;height:250px;" />
                    <div class="form-group">
                        <input type="file" id="MediaImage" name="UploadPic" title="上传" />

                    </div>
                </div>


            </form>
        </div>
    </div>
     
</div>

@Html.Partial("~/Areas/AppAreaName/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")