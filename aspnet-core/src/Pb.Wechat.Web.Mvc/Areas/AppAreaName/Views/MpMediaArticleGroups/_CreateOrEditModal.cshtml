@using Pb.Wechat
@using Pb.Wechat.MpApiTokens.Dto
@using Pb.Wechat.Web.Areas.AppAreaName.Models.Common.Modals
@using Pb.Wechat.Web.Areas.AppAreaName.Models.MpMediaArticleGroups
@model CreateOrEditMpMediaArticleGroupViewModel

@Html.Partial("~/Areas/AppAreaName/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? (L("Edit") + ": " + Model.Name) : L("Create")))

<div class="modal-body">
    <form name="DataForm" role="form" novalidate class="form-validation">
        @if (Model.IsEditMode)
        {
            <input type="hidden" name="Id" value="@Model.Id" />
        }
        <input type="hidden" name="MpID" value="@Model.MpID" />
        <input type="hidden" id="GroupID" value="@ViewBag.GroupID" />
        <div class="form-group form-row-seperated form-md-floating-label">
            <label for="Name">多图文名称</label>
            <input class="form-control edited" type="text" id="CheckName" name="Name" value="@Model.Name" required maxlength="50">
        </div>
    </form>
   

    <div class="row margin-bottom-5 col-md-12">
        <div class="col-md-8">
            <table id="ArticlesTable" class="display table table-striped table-bordered table-hover dt-responsive ">
                <thead>
                    <tr>
                        <th style="width:20%;">封面</th>
                        <th  style="width:60%;">标题</th>
                        <th  style="width:20%;">作者</th>
                    </tr>
                </thead>
            </table>
        </div>
        <div class="col-md-4">
            <table id="SelectedTable" class="display table table-striped table-bordered table-hover dt-responsive">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>标题</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
@Html.Partial("~/Areas/AppAreaName/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
