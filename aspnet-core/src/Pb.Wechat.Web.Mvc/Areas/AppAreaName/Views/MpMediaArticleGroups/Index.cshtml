@using Pb.Wechat
@using Pb.Wechat.Authorization
@using Pb.Wechat.MpMediaArticleGroups.Dto
@using Pb.Wechat.Web.Areas.AppAreaName.Startup
@using Pb.Wechat.Web.Areas.AppAreaName.Models.MpMediaArticleGroups
@model MpMediaArticleGroupViewModel
@{
    ViewBag.CurrentPageName = AppAreaNamePageNames.Common.MpMediaArticleGroups;
}
@section Styles
{
    <style>
        .modal-dialog {
            width: 900px
        }
    </style>
}
@section Scripts
{
    
    <environment names="Development">
        <script src="~/view-resources/Areas/AppAreaName/Views/MpMediaArticleGroups/_CreateOrEditModal.js" asp-append-version="true"></script>
        <script src="~/view-resources/Areas/AppAreaName/Views/MpMediaArticleGroups/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Areas/AppAreaName/Views/MpMediaArticleGroups/_CreateOrEditModal.min.js" asp-append-version="true"></script>
        <script src="~/view-resources/Areas/AppAreaName/Views/MpMediaArticleGroups/Index.min.js" asp-append-version="true"></script>
    </environment>
}
<div class="row margin-bottom-5">
    <div class="col-xs-6">
        <div class="page-head">
            <div class="page-title">
                <h1>
                    <span>多图文素材</span> @*<small>管理公众号令牌信息</small>*@
                </h1>
            </div>
        </div>
    </div>
    <div class="col-xs-6 text-right">
        <button id="ExportListToExcelButton" class="btn green-haze"><i class="fa fa-file-excel-o"></i> @L("ExportToExcel")</button>
        @if (IsGranted(AppPermissions.Pages_MaterialManage_MpMediaArticleGroups))
    {
        <button id="CreateNewModelButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("Create")</button>
}
    </div>
</div>

<div class="portlet light margin-bottom-0">
    <div class="portlet-body">
        <div class="form">
            <form id="FilterForm" class="horizontal-form">
                <input type="hidden" name="MpID" value="@Model.MpID" />

                <div class="form-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label">多图文名称</label>
                                <input type="text" name="Title" class="form-control">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label">标题</label>
                                <input type="text" name="SubTitle" class="form-control">
                            </div>
                        </div>
                    </div>

                </div>
                <div class="row margin-bottom-10">
                    <div class="col-sm-6">
                        @*<span id="ShowAdvancedFiltersSpan" class="clickable-item text-muted"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                        <span id="HideAdvancedFiltersSpan" class="clickable-item text-muted" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>*@
                    </div>
                    <div class="col-sm-6 text-right">
                        <button id="RefreshListButton" class="btn blue"><i class=" fa fa-refresh"></i> @L("Search")</button>
                    </div>
                </div>
            </form>
        </div>
        @*<table id="FormTable" class="display table table-striped table-bordered table-hover dt-responsive nowrap">
            <thead>
                <tr>
                    <th data-field="operation">@L("Actions")</th>
                    <th data-field="name">名称</th>
                    <th data-field="url">封面</th>
                    <th data-field="title">标题</th>
                    <th data-field="lastModificationTime">更新时间</th>

                </tr>
            </thead>
        </table>*@
        <table id="FormTable" class="display table table-striped table-bordered table-hover dt-responsive ">
            <thead>
                <tr>
                    <th>@L("Actions")</th>
                    <th data-field="name">多图文名称</th>
                    <th data-field="url">封面</th>
                    <th data-field="title">标题</th>
                    <th>更新时间</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
