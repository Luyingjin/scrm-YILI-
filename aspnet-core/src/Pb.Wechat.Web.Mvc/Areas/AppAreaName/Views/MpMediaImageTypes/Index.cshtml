@using Pb.Wechat
@using Pb.Wechat.Authorization
@using Pb.Wechat.MpMediaImageTypes.Dto
@using Pb.Wechat.Web.Areas.AppAreaName.Startup
@using Pb.Wechat.Web.Areas.AppAreaName.Models.MpMediaImageTypes
@model MpMediaImageTypeViewModel
@{
    ViewBag.CurrentPageName = AppAreaNamePageNames.Common.MpMediaImageTypes;
}

@section Scripts
{
    
    <environment names="Development">
        <script src="~/view-resources/Areas/AppAreaName/Views/MpMediaImageTypes/_CreateOrEditModal.js" asp-append-version="true"></script>
        <script src="~/view-resources/Areas/AppAreaName/Views/MpMediaImageTypes/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Areas/AppAreaName/Views/MpMediaImageTypes/_CreateOrEditModal.min.js" asp-append-version="true"></script>
        <script src="~/view-resources/Areas/AppAreaName/Views/MpMediaImageTypes/Index.min.js" asp-append-version="true"></script>
    </environment>
}
<div class="row margin-bottom-5">
    <div class="col-xs-6">
        <div class="page-head">
            <div class="page-title">
                <h1>
                    <span>图片素材类型</span> 
                </h1>
            </div>
        </div>
    </div>
    <div class="col-xs-6 text-right">
        <button id="ExportListToExcelButton" class="btn green-haze"><i class="fa fa-file-excel-o"></i> @L("ExportToExcel")</button>
        @if (IsGranted(AppPermissions.Pages_MaterialManage_MpMediaImageTypes))
    {
        <button id="CreateNewModelButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("Create")</button>
}
    </div>
</div>

<div class="portlet light margin-bottom-0">
    <div class="portlet-body">
        <div class="form">
            <form id="FilterForm" class="horizontal-form">
                <input type="hidden" name="MpID" value="@Model.MpID" />
                <div class="form-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label">类型名称</label>
                                <input type="text" name="MediaTypeName" class="form-control">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                @*<label class="control-label">类型</label>
                                <input type="text" name="ImageType" class="form-control">*@
                            </div>
                        </div>
                    </div>
                    <div id="AdvacedAuditFiltersArea" style="display: none">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @*<label class="control-label">创建时间</label>
                                    <input id="creationTimeRange" type="text" class="form-control date-range-picker" />*@
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row margin-bottom-10">
                    <div class="col-sm-6">
                        @*<span id="ShowAdvancedFiltersSpan" class="clickable-item text-muted"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                        <span id="HideAdvancedFiltersSpan" class="clickable-item text-muted" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>*@
                    </div>
                    <div class="col-sm-6 text-right">
                        <button id="RefreshListButton" class="btn blue"><i class=" fa fa-refresh"></i> @L("Search")</button>
                    </div>
                </div>
            </form>
        </div>
        <table id="FormTable" class="display table table-striped table-bordered table-hover dt-responsive ">
            <thead>
                <tr>
                    <th style="width:120px;vertical-align: middle;">@L("Actions")</th>
                    <th>名称</th>
                    <th>创建时间</th>
                    @*<th>最后修改时间</th>*@
                </tr>
            </thead>
        </table>
       
    </div>
</div>
