@using Pb.Wechat
@using Pb.Wechat.Authorization
@using Pb.Wechat.MpSolicitudeSettings.Dto
@using Pb.Wechat.Web.Areas.AppAreaName.Startup
@using Pb.Wechat.Web.Areas.AppAreaName.Models.MpSolicitudeSettings
@{
    ViewBag.CurrentPageName = AppAreaNamePageNames.Common.MpSolicitudeSettings;
}
@model CreateOrEditMpSolicitudeSettingViewModel
@section Styles
    {
    <environment names="Development">
        <link rel="stylesheet" href="~/view-resources/Areas/AppAreaName/Views/MpSolicitudeSettings/Index.css" asp-append-version="true" />
    </environment>

    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/view-resources/Areas/AppAreaName/Views/MpSolicitudeSettings/Index.min.css" asp-append-version="true" />
    </environment>
}
@section Scripts
    {
    <environment names="Development">
        <script src="~/view-resources/Areas/AppAreaName/Views/MpSolicitudeSettings/_CreateOrEditModal.js" asp-append-version="true"></script>
        <script src="~/view-resources/Areas/AppAreaName/Views/MpSolicitudeSettings/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Areas/AppAreaName/Views/MpSolicitudeSettings/_CreateOrEditModal.min.js" asp-append-version="true"></script>
        <script src="~/view-resources/Areas/AppAreaName/Views/MpSolicitudeSettings/Index.min.js" asp-append-version="true"></script>
    </environment>
}
<div class="row margin-bottom-5">
    <div class="col-xs-6">
        <div class="page-head">
            <div class="page-title">
                <h1>
                    <span>关怀回复设置</span>
                </h1>
            </div>
        </div>
    </div>
    <div class="col-xs-6 text-right">
        @if (IsGranted(AppPermissions.Pages_MpSolicitude_Settings))
        {
            <button id="SaveButton" class="btn btn-primary blue"><i class="fa fa-save"></i> 保存</button>
        }
    </div>
</div>

<div class="portlet light margin-bottom-0">
    <div class="portlet-body">
        <div class="form">
            <form id="DataForm" class="horizontal-form">
                <input type="hidden" name="Id" value="@Model.Id" />
                <input type="hidden" name="MpID" value="@Model.MpID" />
                <input type="hidden" name="ImageID" value="@Model.ImageID" />
                <input type="hidden" name="ImageName" value="@Model.ImageName" />
                <input type="hidden" name="ImageMediaID" value="@Model.ImageMediaID" />
                <input type="hidden" name="VideoID" value="@Model.VideoID" />
                <input type="hidden" name="VideoMediaID" value="@Model.VideoMediaID" />
                <input type="hidden" name="VideoName" value="@Model.VideoName" />
                <input type="hidden" name="VoiceID" value="@Model.VoiceID" />
                <input type="hidden" name="VoiceMediaID" value="@Model.VoiceMediaID" />
                <input type="hidden" name="VoiceName" value="@Model.VoiceName" />
                <input type="hidden" name="ArticleGroupID" value="@Model.ArticleGroupID" />
                <input type="hidden" name="ArticleGroupMediaID" value="@Model.ArticleGroupMediaID" />
                <input type="hidden" name="ArticleGroupName" value="@Model.ArticleGroupName" />
                <input type="hidden" name="ArticleID" value="@Model.ArticleID" />
                <input type="hidden" name="ArticleMediaID" value="@Model.ArticleMediaID" />
                <input type="hidden" name="ArticleName" value="@Model.ArticleName" />
                <input type="hidden" name="Content" value="@Model.Content" />
                <div class="form-group form-md-floating-label">
                    <label for="SolicitudeText">触发后多久以内不重复提醒（分钟）</label>
                    <input class="form-control edited" type="number" id="DelayMinutes" name="DelayMinutes" required value="@Model.DelayMinutes" maxlength="1000000">
                </div>
            </form>
        </div>
    </div>
</div>
